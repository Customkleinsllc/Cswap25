{
  "name": "@CryptoSwap/infinity-sdk",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.6",
  "description": "⚒️ An SDK for building applications on top of Pancakeswap Infinity",
  "files": [
    "dist"
  ],
  "keywords": [
    "pancakeswap",
    "infinity"
  ],
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "update:snapshot": "vitest -u",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@CryptoSwap/chains": "workspace:*",
    "@CryptoSwap/swap-sdk-core": "workspace:*",
    "@CryptoSwap/v3-sdk": "workspace:*",
    "@CryptoSwap/permit2-sdk": "workspace:*",
    "bignumber.js": "^9.0.0",
    "tiny-invariant": "^1.3.3",
    "viem": "catalog:"
  },
  "devDependencies": {
    "@CryptoSwap/swap-sdk-evm": "workspace:*",
    "tsup": "^6.7.0",
    "@CryptoSwap/utils": "workspace:*"
  },
  "engines": {
    "node": ">=10"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  }
}
