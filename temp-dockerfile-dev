FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Fix permissions
RUN chmod -R 755 node_modules/.bin

# Expose port
EXPOSE 3000

# Set environment
ENV NODE_ENV=development

# Run Vite dev server
CMD ["npx", "vite", "--host", "0.0.0.0"]

