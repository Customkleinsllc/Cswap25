# Environment Configuration for CSwap DEX

# Network Configuration
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
SEI_RPC_URL=https://sei-rpc.polkachu.com
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY

# Timeout Configurations (in milliseconds)
TIMEOUT_API_REQUEST=10000
TIMEOUT_WEB3_CALL=15000
TIMEOUT_CROSS_CHAIN=30000
TIMEOUT_GRACEFUL_SHUTDOWN=30000
TIMEOUT_DATABASE_QUERY=5000
TIMEOUT_DATABASE_CONNECTION=5000

# Circuit Breaker Configuration
CIRCUIT_BREAKER_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIME=60000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cswap_dex
DB_USER=cswap_user
DB_PASSWORD=your_password
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000
DB_QUERY_TIMEOUT=5000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TIMEOUT=5000

# API Configuration
API_PORT=8000
API_HOST=0.0.0.0
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=100

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Security Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:3000
HELMET_CSP_ENABLED=true

# Web3 Configuration
WEB3_TIMEOUT=15000
WEB3_RETRY_ATTEMPTS=3
WEB3_RETRY_DELAY=1000

# Price Feed Configuration
PRICE_FEED_UPDATE_INTERVAL=30000
PRICE_FEED_TIMEOUT=10000
PRICE_FEED_CIRCUIT_BREAKER_THRESHOLD=3

# Bridge Configuration
BRIDGE_TIMEOUT=30000
BRIDGE_RETRY_ATTEMPTS=3
BRIDGE_RETRY_DELAY=5000

# Monitoring Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
METRICS_ENABLED=true
METRICS_PORT=9090

# Development Configuration
NODE_ENV=development
DEBUG=true
HOT_RELOAD=true

# Production Configuration (uncomment for production)
# NODE_ENV=production
# DEBUG=false
# HOT_RELOAD=false
# LOG_LEVEL=warn



